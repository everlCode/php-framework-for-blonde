{% extends 'default.html.twig' %}

{% block main %}
    <div class="bg-body-tertiary p-5 rounded">
        <form action="/posts" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Заголовок</label>
                <input type="text" value="" name="title" class="form-control" id="title" aria-describedby="titleHelp" required>
                <div id="titleHelp" class="form-text">

                </div>
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Контент</label>
                <textarea name="body" id="" cols="30" rows="10" class="form-control" required>
                </textarea>
            </div>
            <button type="submit" class="btn btn-primary">Добавить</button>
        </form>
    </div>
{% endblock %}
